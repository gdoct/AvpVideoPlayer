                <DataTemplate>
                    <StackPanel Orientation="Horizontal" Margin="2 2 2 2" HorizontalAlignment="Stretch">
                        <Grid Width="{Binding Indent}" />
                        <Image Source="{Binding Icon}" Width="16"  VerticalAlignment="Top" Margin="2 2 2 2"/>
                        <TextBlock 
                                Text="{Binding Name}" 
                                HorizontalAlignment="Stretch"
                                TextWrapping="Wrap" />
                    </StackPanel>
