<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <SolidColorBrush x:Key="DarkBgBrush" 
                         Color="#0E0E0E" />
        <SolidColorBrush x:Key="LessDarkBgBrush" 
                         Color="#282828" />
        <SolidColorBrush x:Key="BlackBrush" 
                         Color="Black" />
    <SolidColorBrush x:Key="LightFgBrush" 
                         Color="AntiqueWhite" />
    <Style x:Key="BasicStyle">

        <Setter Property="ItemsControl.Background" Value="{StaticResource DarkBgBrush}" />
        <Setter Property="ItemsControl.Foreground" Value="{StaticResource LightFgBrush}" />
    </Style>
</ResourceDictionary>